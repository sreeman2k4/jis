<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <head>
        <title>CSS Registration Form</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <link rel="stylesheet" type="text/css" href="css/default.css"/>
    </head>
    <body>    
        <form action="/cases/addemployee" method="POST" class="register">
            <h1>Registration</h1>
            <fieldset class="row1">
                <legend>Account Details
                </legend>
                <p>
                    <label>Email *
                    </label>
                    <input type="text" name="email"/>
                    <label>Repeat email *
                    </label>
                    <input type="text" />
                </p>
                <p>
                    <label>Password*
                    </label>
                    <input type="text" name="password"  required/>
                    <label>Repeat Password*
                    </label>
                    <input type="text"/>
                    <label class="obinfo">* obligatory fields
                    </label>
                </p>
            </fieldset>
            <fieldset class="row2">
                <legend>Personal Details
                </legend>
                <p>
                    <label>Name *
                    </label>
                    <input type="text" name="username" class="long"/>
                </p>
                <p>
                    <label>Phone *
                    </label>
                    <input type="text" name="phone" maxlength="10"/>
                </p>
                <p>
                    <label class="optional">Street
                    </label>
                    <input type="text" name="street" class="long"/>
                </p>
                <p>
                    <label>City *
                    </label>
                    <input type="text"name="city" class="long"/>
                </p>
               
            </fieldset>
            <label for="assigned">Assigned:</label>
            <select id="assigned" name="profession">
                    <option value="judge">judge</option>
                    <option value="lawyer">lawyer</option>
            </select>

            
